<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="穿搭比賽：約會情境"
                android:textColor="@color/BottomNevigationBarBrown"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="44dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/BottomNevigationBarBrown"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="44dp" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                
                android:scaleType="centerInside"

                app:srcCompat="@drawable/updatebt"
                tools:layout_editor_absoluteX="71dp"
                tools:layout_editor_absoluteY="95dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/BottomNevigationBarBrown"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="44dp" />

            <EditText
                android:id="@+id/update_text"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/textview_border"
                android:textSize="15dp"

                android:hint="@string/showtext_when_upate" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="注意事項"
                android:textSize="18dp"
                android:textColor="@color/BottomNevigationBarBrown"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/BottomNevigationBarBrown"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="44dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/showtext_when_upate2"
                android:textColor="@color/BottomNevigationBarBrown" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/BottomNevigationBarBrown"
                android:textSize="30dp"

                tools:layout_editor_absoluteX="129dp"
                tools:layout_editor_absoluteY="44dp" />

            <Button
                android:id="@+id/update_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/BottomNevigationBarYellow"
                android:onClick="sendTocloud"
                android:text="送出" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>